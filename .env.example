# Database
# Local dev: use localhost
DATABASE_URL="postgresql://waterwatcher:waterwatcher@localhost:5432/waterwatcher"
# Docker Compose: use the service name (postgres) as the host
# DATABASE_URL="postgresql://waterwatcher:waterwatcher@postgres:5432/waterwatcher"

# Next.js
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXTAUTH_SECRET="change-me-to-a-random-secret"
NEXTAUTH_URL="http://localhost:3000"

# Web Push (generate with: npx web-push generate-vapid-keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""
VAPID_SUBJECT="mailto:you@example.com"

# Scraping Pipeline
SCRAPE_INTERVAL_MINUTES=60
RAFT_WATCH_INTERVAL_MINUTES=15

# Email Notifications (optional — Resend)
RESEND_API_KEY=""
NOTIFICATION_FROM_EMAIL="alerts@waterwatcher.app"

# Facebook (optional — for group scraping)
FACEBOOK_ACCESS_TOKEN=""

# Craigslist
CRAIGSLIST_REGIONS="seattle,portland,denver,saltlakecity,boise"

# USGS Water Services (public, no key needed)
USGS_BASE_URL="https://waterservices.usgs.gov/nwis"

# American Whitewater (public, no key needed)
AW_BASE_URL="https://www.americanwhitewater.org/content/River/view"

# BLM (Bureau of Land Management)
BLM_BASE_URL="https://www.blm.gov/services/recreation"

# USFS (US Forest Service) — RIDB API
# Get an API key at https://ridb.recreation.gov/
RIDB_API_KEY=""

# Land agency scrape interval (minutes, default 360 = 6 hours)
LAND_AGENCY_INTERVAL_MINUTES=360
